fun sign(n){
    if(n < 0){
        return -1;
    } else if (n > 0){
        return 1;
    } else {
        return 0;
    }
    throw "Failed to sign";
};

fun max(a, b) {
  if(a > b) return a; 
  return b;
};

fun min(a, b) {
    if(a < b) return a;
    return b;
}

fun abs(a){
    if(a < 0) return a * -1;
    return a;
};